<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
	version="1.2">
	<managed-bean>
		<managed-bean-name>indexController</managed-bean-name>
		<managed-bean-class>at.ac.tuwien.big.ewa.ue3.controller.IndexController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>registerController</managed-bean-name>
		<managed-bean-class>at.ac.tuwien.big.ewa.ue3.controller.RegisterController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>player</property-name>
			<value>#{playerBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>loginController</managed-bean-name>
		<managed-bean-class>at.ac.tuwien.big.ewa.ue3.controller.LoginController</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
		<managed-property>
			<property-name>player</property-name>
			<value>#{playerBean}</value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>registerPlayerBean</managed-bean-name>
		<managed-bean-class>at.ac.tuwien.big.easyholdem.player.Player</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>playerBean</managed-bean-name>
		<managed-bean-class>at.ac.tuwien.big.easyholdem.player.Player</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>index</display-name>
		<from-view-id>/index.jsp</from-view-id>
		<navigation-case>
			<from-action>#{indexController.login}</from-action>
			<to-view-id>/login.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>register</from-outcome>
			<to-view-id>/register.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>register</display-name>
		<from-view-id>/register.jsp</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/login.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>fail</from-outcome>
			<to-view-id>/register-failed.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>login</display-name>
		<from-view-id>/login.jsp</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/welcome.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcome</display-name>
		<from-view-id>/welcome.jsp</from-view-id>
		<navigation-case>
			<to-view-id>/index.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<to-view-id>/table.jsp</to-view-id>
		</navigation-case>
		<navigation-case>
			<to-view-id>/account.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>table</display-name>
		<from-view-id>/table.jsp</from-view-id>
		<navigation-case>
			<to-view-id>/index.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>account</display-name>
		<from-view-id>/account.jsp</from-view-id>
		<navigation-case>
			<to-view-id>/index.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>login</display-name>
		<from-view-id>/login.jsp</from-view-id>
		<navigation-case>
			<from-outcome>failUser</from-outcome>
			<to-view-id>/login.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>login</display-name>
		<from-view-id>/login.jsp</from-view-id>
		<navigation-case>
			<from-outcome>failPassword</from-outcome>
			<to-view-id>/login.jsp</to-view-id>
		</navigation-case>
	</navigation-rule>
	<validator>
		<validator-id>UsernameValidator</validator-id>
		<validator-class>at.ac.tuwien.big.ewa.ue3.validator.UsernameValidator</validator-class>
	</validator>
	<validator>
		<validator-id>PasswordValidator</validator-id>
		<validator-class>at.ac.tuwien.big.ewa.ue3.validator.PasswordValidator</validator-class>
	</validator>
	<converter>
		<converter-id>GenderConverter</converter-id>
		<converter-class>at.ac.tuwien.big.ewa.ue3.converter.GenderConverter</converter-class>
	</converter>
</faces-config>
